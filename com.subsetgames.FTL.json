{
  "app-id": "com.subsetgames.FTL",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.4",
  "sdk": "org.freedesktop.Sdk",
  "version": "1.5.13",
  "command": "ftl",
  "rename-desktop-file": "ftl.desktop",
  "rename-icon": "ftl",
  "finish-args": [
      /* X11 access */
      "--socket=x11", "--share=ipc",
      /* OpenGL access */
      "--device=dri",
      /* PulseAudio access */
      "--socket=pulseaudio",
      /* Wayland access */
      "--socket=wayland",
      /* Savegames */
      "--persist=.local/share/FasterThanLight"
  ],

  "modules": [
    "modules/fribidi-0.19.7.json",
    "modules/glu-9.0.0.json",
    {
      "name": "ftl",
      "buildsystem": "simple",
      "build-commands": [
	"mkdir -p /app/share/icons/hicolor/64x64/apps/",
	"install ftl.png /app/share/icons/hicolor/64x64/apps/ftl.png",

	"mkdir -p /app/share/applications/",
	"install ftl.desktop /app/share/applications/ftl.desktop",

	"mkdir -p /app/FTL",
	"cp -r * /app/FTL/",

	"mkdir -p /app/bin",
	"ln -s /app/FTL/FTL /app/bin/ftl"
      ], 
      "sources" : [
        {
          "type": "archive",
          "path": "FTL Faster Than Light 1_5_13.tar.lzma"
        },
        {
          "type": "file",
          "path": "ftl.desktop"
        },
        {
          "type": "file",
          "path": "ftl.png"
        },
        {
          "type": "patch",
          "path": "FTL.patch"
        }
       ]
    }
  ]
}
